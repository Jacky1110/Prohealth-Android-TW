<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.v7idea.healthkit.PrepareConnectPage2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/PrepareConnectPage2_LinearLayout_CheckBoxContainer">

        <com.v7idea.template.View.AutoReleaseImageView
            android:id="@+id/PrepareConnectPage2_AutoReleaseImageView_ContentImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/prepare_connect_page6_bg" />

    </RelativeLayout>

    <com.v7idea.template.View.AutoReleaseImageView
        android:id="@+id/PrepareConnectPage2_AutoReleaseImageView_Header"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:scaleType="fitXY"
        android:src="@mipmap/top_color_header" />


    <LinearLayout
        android:id="@+id/PrepareConnectPage2_LinearLayout_CheckBoxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PrepareConnectPage2_TextView_CheckBoxHint"
        android:layout_marginBottom="26px"
        android:layout_marginTop="9px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PrepareConnectPage2_ImageView_CheckIcon"
            android:layout_width="30px"
            android:layout_height="30px"
            android:scaleType="fitXY"
            android:src="@drawable/check_box_selector" />

        <TextView
            android:id="@+id/PrepareConnectPage2_TextView_MiddleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="@string/next_time_not_show"
            android:textColor="@color/color_515355"
            android:textSize="28px" />

    </LinearLayout>

    <TextView
        android:id="@+id/PrepareConnectPage2_TextView_CheckBoxHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PrepareConnectPage2_BottomButton"
        android:gravity="center"
        android:text="@string/PREPARECONNECTPAGE2_TEXT_NEXT_TIME_NOT_SHOW_HINT"
        android:textColor="@color/color_515355"
        android:textSize="24px" />

    <com.v7idea.healthkit.View.BottomButton
        android:id="@+id/PrepareConnectPage2_BottomButton"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="28px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px" />

</RelativeLayout>
