<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
tools:context="com.v7idea.healthkit.CheckCodePageForPassword">


<LinearLayout
    android:id="@+id/CheckCodePageForPassword_LinearLayout_Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/CheckCodePageForPassword_BottomButton"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/CheckCodePageForPassword_RelativeLayout_TopBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.v7idea.template.View.AutoReleaseImageView
            android:id="@+id/CheckCodePageForPassword_SpecialImageView_Background"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_padding_left"
            android:layout_marginRight="@dimen/activity_padding_right"
            android:scaleType="fitXY"
            android:src="@mipmap/top_color_header" />

        <com.v7idea.template.View.AutoReleaseImageView
            android:id="@+id/CheckCodePageForPassword_SpecialImageView_TopBannerBackground"
            android:layout_width="696px"
            android:layout_height="558px"
            android:layout_below="@+id/CheckCodePageForPassword_SpecialImageView_Background"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_padding_left"
            android:layout_marginRight="@dimen/activity_padding_right"
            android:layout_marginTop="30px"
            android:scaleType="fitXY"
            android:src="@mipmap/page_login_banner" />

        <com.v7idea.template.View.V7TitleView
            android:id="@+id/CheckCodePageForPassword_V7TitleView_TopBannerTitle"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_below="@+id/CheckCodePageForPassword_SpecialImageView_TopBannerBackground"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/CheckCodePageForPassword_Text_Title"
            android:textColor="@color/color_AAE3F3"
            android:textSize="40px" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/CheckCodePageForPassword_LinearLayout_CheckCodeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.v7idea.template.View.V7TitleView
            android:id="@+id/CheckCodePageForPassword_V7TitleView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51px"
            android:layout_marginRight="51px"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/CheckCodePageForPassword_Text_Data"
            android:textColor="@color/color_9B9B9B"
            android:textSize="36px" />

        <RelativeLayout
            android:id="@+id/CheckCodePageForPassword_RelativeLayout_CheckCodeContainer"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_marginLeft="@dimen/activity_padding_left"
            android:layout_marginRight="@dimen/activity_padding_right"
            android:layout_marginTop="40px"
            android:background="@drawable/gray_background_with_corner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CheckCodePageForPassword_TextView_CheckCode"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/CheckCodePageForPassword_Text_CheckCode"
                android:textColor="@color/color_7E7E85"
                android:textSize="40px" />

            <EditText
                android:id="@+id/CheckCodePageForPassword_EditText_CheckCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/CheckCodePageForPassword_TextView_CheckCode"
                android:background="@null"
                android:hint="@string/CheckCodePageForPassword_Hint_CheckCode"
                android:singleLine="true"
                android:textColorHint="@color/color_CBCBCB"
                android:textSize="36px" />
        </RelativeLayout>


        <TextView
            android:id="@+id/CheckCodePageForPassword_TextView_ReSendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding_left"
            android:layout_marginRight="@dimen/activity_padding_right"
            android:layout_marginTop="48px"
            android:gravity="center_vertical"
            android:text="@string/CheckCodePageForPassword_Text_ReSendCode"
            android:textColor="@drawable/checkcodpage_re_send_code_select"
            android:textSize="36px" />


    </LinearLayout>


</LinearLayout>

<com.v7idea.healthkit.View.BottomButton
    android:id="@+id/CheckCodePageForPassword_BottomButton"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="28px"
    android:layout_marginLeft="@dimen/activity_padding_left"
    android:layout_marginRight="@dimen/activity_padding_right" />

</RelativeLayout>

