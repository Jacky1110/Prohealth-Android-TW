<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BottomButton_LinearLayout_Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <com.v7idea.template.View.V7TitleView
        android:id="@+id/BottomButton_V7TitleView_OneButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:textColor="@drawable/button_textcolor_selector"
        android:textSize="36px"
        android:visibility="gone" />

    <com.v7idea.template.View.V7TitleView
        android:id="@+id/BottomButton_V7TitleView_Left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="4px"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:textColor="@drawable/button_textcolor_selector"
        android:textSize="36px" />

    <com.v7idea.template.View.V7TitleView
        android:id="@+id/BottomButton_V7TitleView_Right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4px"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:textColor="@drawable/button_textcolor_selector"
        android:textSize="36px" />

</LinearLayout>
