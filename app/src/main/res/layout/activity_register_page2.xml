    <ScrollView
        android:id="@+id/RegisterPage2_ScrollView_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="20px">

        <LinearLayout
            android:id="@+id/RegisterPage2_LinearLayout_ScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.v7idea.template.View.AutoReleaseImageView
                    android:id="@+id/RegisterPage2_AutoReleaseImageView_BannerImage"
                    android:layout_width="750px"
                    android:layout_height="412px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/page_register_banner" />

                <com.v7idea.template.View.AutoReleaseImageView
                    android:id="@+id/RegisterPage2_AutoReleaseImageView_BackIcon"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/RegisterPage_AutoReleaseImageView_BannerImage"
                    android:layout_marginLeft="15px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/page_register_button_back" />

            </RelativeLayout>

            <com.v7idea.template.View.V7TitleView
                android:id="@+id/RegisterPage2_V7TitleView_Title"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding_left"
                android:paddingRight="@dimen/activity_padding_right"
                android:text="@string/RegisterPage_Text_title"
                android:textColor="@color/color_626262_title"
                android:textSize="40px" />

