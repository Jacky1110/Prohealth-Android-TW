<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.v7idea.healthkit.CommunityBlindingPage">

    <com.v7idea.template.View.Banner
        android:id="@+id/BindingCommunityPage_Banner_Header"
        android:layout_width="match_parent"
        android:layout_height="100px" />
    <ScrollView
        android:id="@+id/BindingCommunityPage_LockScrollView_ScrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38px"
        android:paddingLeft="@dimen/activity_padding_left"
        android:paddingRight="@dimen/activity_padding_right"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/BindingCommunityPage_LinearLayout_ScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/BindingCommunityPage_WeChat_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:layout_marginTop="20px"
                android:background="@drawable/gray_frame_white_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/BindingCommunityPage_WeChat_ImageView"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="15px"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/wechat_icon"
                    android:textColor="@android:color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/BindingCommunityPage_WeChat_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/BindingCommunityPage_WeChat_ImageView"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="@string/BindingCommunityPage_WeChat_text"
                    android:textColor="@android:color/black"
                    android:textSize="40px"/>

                <TextView
                    android:id="@+id/BindingCommunityPage_WeChat_TextView_binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="90px"
                    android:textSize="40px"
                    android:textColor="@color/color_7BD8CE"
                    android:text="綁定" />

                <ImageView
                    android:id="@+id/BindingCommunityPage_WeChat_ImageView_arrow_next"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/BindingCommunityPage_Line_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:layout_marginTop="20px"
                android:background="@drawable/gray_frame_white_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/BindingCommunityPage_Line_ImageView"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="15px"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/line_icon"
                    android:textColor="@android:color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/BindingCommunityPage_Line_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/BindingCommunityPage_Line_ImageView"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="@string/BindingCommunityPage_Line_text"
                    android:textColor="@android:color/black"
                    android:textSize="40px"/>

                <TextView
                    android:id="@+id/BindingCommunityPage_Line_TextView_binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="90px"
                    android:textSize="40px"
                    android:textColor="@color/color_7BD8CE"
                    android:text="綁定" />

                <ImageView
                    android:id="@+id/BindingCommunityPage_Line_ImageView_arrow_next"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_next" />
            </RelativeLayout>

