<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10px"
    android:paddingBottom="10px">

    <ImageView
        android:id="@+id/RecommendationItem_ImageView_Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ble_device_selector"/>

    <com.v7idea.template.View.V7TitleView
        android:id="@+id/RecommendationItem_V7TitleView_Name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150px"
        android:layout_toLeftOf="@+id/RecommendationItem_ImageView_Icon"
        android:gravity="center_vertical"
        android:textSize="@dimen/TextSize"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/RecommendationItem_ImageView_Icon"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40px"
        android:scaleType="fitXY"/>

</RelativeLayout>