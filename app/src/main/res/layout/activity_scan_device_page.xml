<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.v7idea.healthkit.ScanDevicePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.v7idea.template.View.AutoReleaseImageView
                android:id="@+id/ScanDevicePage_AutoReleaseImageView_Banner"
                android:layout_width="match_parent"
                android:layout_height="412px"
                android:scaleType="fitXY"
                android:src="@mipmap/hero_image" />

            <com.v7idea.template.View.AutoReleaseImageView
                android:id="@+id/ScanDevicePage_AutoReleaseImageView_BackImage"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:scaleType="fitXY"
                android:src="@mipmap/top_header_icon_home_blue" />

            <TextView
                android:id="@+id/ScanDevicePage_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ScanDevicePage_AutoReleaseImageView_Banner"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="34px"
                android:gravity="left|center_vertical"
                android:text="@string/ScanDevicePage_Text_Mode1_Title"
                android:textColor="@color/color_A1E6F6"
                android:textSize="@dimen/TextSize" />


            <RelativeLayout
                android:id="@+id/ScanDevicePage_RelativeLayout_ModeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ScanDevicePage_ImageTextView"
                android:layout_below="@+id/ScanDevicePage_TextView_Title"
                android:paddingLeft="@dimen/activity_padding_left"
                android:paddingRight="@dimen/activity_padding_right">


                <LinearLayout
                    android:id="@+id/ScanDevicePage_LinearLayout_Mode1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="38px"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ScanDevicePage_Mode1_MiddleTitle"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:gravity="center_vertical"
                        android:text="@string/ScanDevicePage_Text_Mode1_MiddleTitle"
                        android:textColor="@color/color_9B9B9B"
                        android:textSize="32px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode1_Icon1"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_power" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode1_Item1"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode1_Icon1"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode1_Icon1"
                            android:layout_marginTop="6px"
                            android:layout_marginLeft="35px"
                            android:text="@string/ScanDevicePage_Text_Mode1_Item1"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode1_Icon2"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_flight" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode1_Item2"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode1_Icon2"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode1_Icon2"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode1_Item2"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode1_Icon3"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_wifi" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode1_Item3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode1_Icon3"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode1_Icon3"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode1_Item3"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode1_Icon4"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_bluetooth" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode1_Item4"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode1_Icon4"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode1_Icon4"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode1_Item4"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode1_Icon5"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_device" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode1_Item5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode1_Icon5"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode1_Icon5"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode1_Item5"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>


                </LinearLayout>

                <ListView
                    android:id="@+id/ScanDevicePage_ListView_ShowDeviceList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="20px"
                    android:listSelector="@android:color/transparent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ScanDevicePage_LinearLayout_Mode2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ScanDevicePage_ListView_ShowDeviceList"
                    android:layout_marginLeft="13px"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/ScanDevicePage_Mode2_MiddleTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="44px"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_9B9B9B"
                        android:textSize="40px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode2_Icon1"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_device_blue" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode2_Item1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode2_Icon1"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode2_Icon1"
                            android:layout_marginTop="6px"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/ScanDevicePage_Text_Mode2_Item1"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode2_Icon2"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_link_blue" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode2_Item2"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode2_Icon2"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode2_Icon2"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode2_Item2"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ScanDevicePage_LinearLayout_Mode3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/ScanDevicePage_TextView_Empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="@string/ScanDevicePage_Text_Mode3_ListView"
                        android:textColor="@color/color_666666"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/ScanDevicePage_Mode3_MiddleTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5px"
                        android:layout_marginTop="25px"
                        android:layout_marginLeft="45px"
                        android:gravity="center_vertical"
                        android:text="@string/ScanDevicePage_Text_Mode3_MiddleTitle"
                        android:textColor="@color/color_9B9B9B"
                        android:textSize="40px"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode3_Icon1"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_flight" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode3_Item1"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode3_Icon1"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode3_Icon1"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode3_Item1"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode3_Icon2"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_wifi" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode3_Item2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode3_Icon2"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode3_Icon2"
                            android:layout_marginTop="6px"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/ScanDevicePage_Text_Mode3_Item2"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode3_Icon3"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_bluetooth" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode3_Item3"
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode3_Icon3"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode3_Icon3"
                            android:layout_marginTop="6px"
                            android:text="@string/ScanDevicePage_Text_Mode3_Item3"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ScanDevicePage_Mode3_Icon4"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_small_device" />

                        <TextView
                            android:id="@+id/ScanDevicePage_Mode3_Item4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_alignTop="@+id/ScanDevicePage_Mode3_Icon4"
                            android:layout_toRightOf="@+id/ScanDevicePage_Mode3_Icon4"
                            android:layout_marginTop="6px"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/ScanDevicePage_Text_Mode3_Item4"
                            android:textColor="@color/color_9B9B9B"
                            android:textSize="32px" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/ScanDevicePage_Mode3_BottomItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.1"
                        android:layout_weight="5"
                        android:textColor="@color/color_9B9B9B"
                        android:paddingBottom="44px"
                        android:textSize="40px" />

                </LinearLayout>

            </RelativeLayout>

            <com.v7idea.healthkit.View.ImageTextView
                android:id="@+id/ScanDevicePage_ImageTextView"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28px"
                android:layout_marginLeft="27px"
                android:layout_marginRight="27px">

            </com.v7idea.healthkit.View.ImageTextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

